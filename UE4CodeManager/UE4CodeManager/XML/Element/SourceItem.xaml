<UserControl x:Class="UE4CodeManager.SourceItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UE4CodeManager"
             mc:Ignorable="d" 
             d:DesignWidth="800" Height="30">
    <Grid Background="#707070">
        <TextBlock Text="MyActor.cpp" VerticalAlignment="Center" Margin="12,0,0,0" FontFamily="/UE4CodeManager;component/Resource/Font/#KoPubDotum_Pro Bold" FontSize="14" Foreground="LightGray"></TextBlock>
        <Grid>
            <Ellipse Width="20" Height="20" Margin="0, 0, 12, 0" HorizontalAlignment="Right"></Ellipse>
        </Grid>
        <Border Height="1" Background="#33FFFFFF" VerticalAlignment="Bottom"></Border>
    </Grid>
</UserControl>
